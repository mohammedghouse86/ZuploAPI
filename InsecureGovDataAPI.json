        "operationId": "get_bank_details_banks__iban__get",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "iban",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Iban"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BankOwnerDetails"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "tags": ["API Metadata"],
        "summary": "Export OpenAPI JSON",
        "description": "Provides OpenAPI JSON schema for third-party integrations.",
        "operationId": "get_openapi_json_openapi_json_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "Token": {
        "properties": {
          "access_token": {
            "type": "string",
            "title": "Access Token"
          },
          "token_type": {
            "type": "string",
            "title": "Token Type"
          }
        },
        "type": "object",
        "required": ["access_token", "token_type"],
        "title": "Token"
      },
      "UserLogin": {
        "properties": {
          "username": {
            "type": "string",
            "title": "Username"
          },
          "password": {
            "type": "string",
            "title": "Password"
          }
        },
        "type": "object",
        "required": ["username", "password"],
        "title": "UserLogin"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      },
      "PhoneDetails": {
        "type": "object",
        "properties": {
          "number": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "registration_date": {
            "type": "string",
            "format": "date"
          },
          "emirate": {
            "type": "string"
          }
        },
        "title": "PhoneDetails"
      },
      "PhoneLookupResponse": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "phone_details": {
            "$ref": "#/components/schemas/PhoneDetails"
          }
        },
        "title": "PhoneLookupResponse"
      },
      "CarDetails": {
        "type": "object",
        "properties": {
          "plate_number": {
            "type": "string"
          },
          "emirate": {
            "type": "string"
          },
          "registration_date": {
            "type": "string",
            "format": "date"
          },
          "renewal_date": {
            "type": "string",
            "format": "date"
          }
        },
        "title": "CarDetails"
      },
      "CarLookupResponse": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "car_details": {
            "$ref": "#/components/schemas/CarDetails"
          }
        },
        "title": "CarLookupResponse"
      },
      "BankDetails": {
        "type": "object",
        "properties": {
          "iban": {
            "type": "string",
            "title": "IBAN"
          },
          "bank_name": {
            "type": "string",
            "title": "Bank Name"
          },
          "registration_date": {
            "type": "string",
            "format": "date",
            "title": "Registration Date"
          }
        },
        "required": ["iban", "bank_name", "registration_date"],
        "title": "BankDetails"
      },
      "BankOwnerDetails": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "title": "Owner"
          },
          "id": {
            "type": "string",
            "title": "ID"
          },
          "bank_details": {
            "$ref": "#/components/schemas/BankDetails"
          }
        },
        "required": ["owner", "id", "bank_details"],
        "title": "BankOwnerDetails"
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "title": "UserProfile"
      },
      "UserRoleUpdateResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "new_role": {
            "type": "string"
          }
        },
        "title": "UserRoleUpdateResponse"
      }
    },
    "securitySchemes": {
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}